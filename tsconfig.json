{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "outDir": "./dist",
    "strict": true,
    "rootDir": "./src",
    "baseUrl": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"]
}
